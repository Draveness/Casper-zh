{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="subscribe-button icon-feed" href="http://draveness.me/rss/">Subscribe</a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
        <div class="main-header-content inner">
            
            
            <div class="page-social">
              <!-- Github -->
              <li class="navigation__item">
                <a href="https://github.com/draveness" title="@Draveness's Github" target="_blank">
                  <i class='social fa fa-github'></i>
                  <span class="label">Github</span>
                </a>
              </li>
            
              <!-- Google Plus -->
              <li class="navigation__item">
                <a href="https://plus.google.com/101654401962807990386" title="@Draveness" target="_blank">
                  <i class='social fa fa-google-plus'></i>
                  <span class="label">Google Plus</span>
                </a>
              </li>
            
              <!-- Linkedin -->
              <li class="navigation__item">
                <a href="http://www.linkedin.com/profile/view?id=419607695" title="@Draveness" target="_blank">
                  <i class='social fa fa-linkedin'></i>
                  <span class="label">Linkedin</span>
                </a>
              </li>
              
            
              <!-- Email -->
              <li class="navigation__item">
                <a href="mailto:stark.draven@gmail.com" title="contact me">
                  <i class='social fa fa-envelope'></i>
                  <span class="label">Email</span>
                </a>
              </li>
            </div>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">下拉显示</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
